<GUIStructure>

	<Menu name="MainMenu" ignoreState="true" flags="packvertical center mainmenu">
        <Container flags="packhorizontal" size="100%,100%">
           
        </Container>
        <Container flags="packhorizontal" style="BottomFrameStyle">
            <Button name="PlayGameButton" link="PlayGameMenu" size="75%,5%">PLAY</Button>
            <Button name="LoadGameButton" link="LoadGameMenu" size="75%,5%">LOAD GAME</Button>
            <Button name="StatsButton" link="StatsMenu" size="75%,5%">STATS</Button>
            <Button name="OptionsButton" link="OptionsMenu" size="75%,5%">OPTIONS</Button>
        </Container>
	</Menu>

	<Menu name="LoadGameMenu" flags="packvertical">
        <Container flags="packhorizontal" size="100%,100%">
           
        </Container>
        <Container flags="packhorizontal" style="BottomFrameStyle">
            <Button name="LoadMenuBack" link="MainMenu" size="75%,5%">BACK</Button>
            <Button name="LoadMenuLoad" action="LoadLevel" size="75%,5%">LOAD</Button>
        </Container>
    </Menu>

	<Menu name="OptionsMenu" flags="packvertical">
		<Container flags="packhorizontal" size="100%,100%">
           
        </Container>
        <Container flags="packhorizontal" style="BottomFrameStyle">
            <Button name="OptionsBack" link="MainMenu" size="75%,5%">BACK</Button>
            <Button name="OptionsSave" link="MainMenu" size="75%,5%">SAVE</Button>
            <Button name="OptionsApply" size="75%,5%">APPLY</Button>
        </Container>
	</Menu>

	<Menu name="PlayGameMenu" flags="packvertical">
        <Container flags="packhorizontal" size="100%,100%">
           
        </Container>
        <Container flags="packhorizontal" style="BottomFrameStyle">
            <Button name="ContinueGameButton" size="75%,5%">CONTINUE</Button>
            <Button name="PlayGameBack" link="MainMenu" size="75%,5%">BACK</Button>
        </Container>
	</Menu>

	<Menu name="StatsMenu" flags="packvertical">
        <Container flags="packhorizontal" size="100%,100%">
           
        </Container>
        <Container flags="packhorizontal" style="BottomFrameStyle">
            <Button name="StatsBack" link="MainMenu">BACK</Button>
        </Container>
	</Menu>

	<Menu name="ContextMenu" ignoreState="true" visible="false" style="ContextMenuStyle" flags="packvertical center">
		<Button name="CMAction1" size="200,20">Show test window</Button>
		<Button name="CMAction2" size="200,20">Switch menu</Button>
		<Button name="CMAction3" size="200,20">Popup test</Button>
		<Button name="CMAction4" size="200,20">Properties...</Button>
	</Menu>

    <Menu name="Empty">
	</Menu>
    
</GUIStructure>
